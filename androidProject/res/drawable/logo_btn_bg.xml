<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#b99" android:startColor="#fdd" />

            <stroke android:width="1dp" android:color="#733" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#000000" />

            <stroke android:width="1dp" android:color="#373" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>