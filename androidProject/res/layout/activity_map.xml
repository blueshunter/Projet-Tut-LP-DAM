<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".ParameterActivity" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_weight="0.43" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp" >

        <Button
            android:id="@+id/btnTrajet"
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/bt_iut_windows"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Trajet" />

        <Button
            android:id="@+id/btnServices"
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/bt_iut_windows"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Services" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="0.00" >

        <TextView
            android:id="@+id/textViewAdress"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" >

        <Button
            android:id="@+id/btnMapsNice"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/bt_iut_windows"
            android:text="Nice" />

        <Button
            android:id="@+id/btnMapsMenton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/bt_iut_windows"
            android:text="Menton" />

        <Button
            android:id="@+id/btnMapsCannesLB"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="0.25"
            android:background="@drawable/bt_iut_windows"
            android:text="Bocca" />

        <Button
            android:id="@+id/btnMapsCannes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/bt_iut_windows"
            android:text="Cannes" />

        <Button
            android:id="@+id/btnMapsSophia"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/bt_iut_windows"
            android:text="Sophia" />
    </LinearLayout>

</LinearLayout>