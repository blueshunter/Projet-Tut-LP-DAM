<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#505050"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="ActualitÃ©s"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="#004d97"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvSuapsActuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actu Suaps"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="#004d97"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTweetsActuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actu Tweets"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imgBtIutWindow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_iut_window" />

                <ImageButton
                    android:id="@+id/imgBtGrades"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_grades" />

                <ImageButton
                    android:id="@+id/imgBtCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_calendar" />

                <ImageButton
                    android:id="@+id/imgBtMap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_maps" />

                <ImageButton
                    android:id="@+id/imgBtSuaps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/logo_bg"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_suaps" />

                <ImageButton
                    android:id="@+id/imgBtPostBac"
                    android:layout_width="0dp"
                    android:background="@drawable/logo_bg"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_post_bac" />

                <ImageButton
                    android:id="@+id/imgBtDirectory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_addressbook" />

                <ImageButton
                    android:id="@+id/imgBtCompanyPartnership"
                    android:layout_width="0dp"
                    android:background="@drawable/logo_bg"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_compagny_partnership" />

                <ImageButton
                    android:id="@+id/imgBtTwitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logo_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.30"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_twitter" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>