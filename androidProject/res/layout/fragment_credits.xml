<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apropos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="A Propos"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_big" />

            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cette application nommé « IUT Nice Côte d’Azur » est née par un projet tuteuré de la Licence Pro Système Informatique spécialité Développement d&apos;Applications Mobiles (LP SIL DAM) à Sophia-Antipolis en 2013-2014. Elle a aussi été devéloppé pour la plateforme iOS."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Client :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M. DONATI Léo représentant de l&apos;Université Nice Sophia-Antipolis."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Prestataire :"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Etudiants de LP SIL DAM en traditionnel."
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M. SCHERER Nicolas, Responsable du développement"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M. CASSISA Alan"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mlle. SEMMEZIES Cindy"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtLoadingWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="M. VERNOUX Pascal"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>